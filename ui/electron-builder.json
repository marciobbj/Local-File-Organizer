{
  "appId": "com.localfileorganizer.app",
  "productName": "Local File Organizer",
  "directories": {
    "output": "dist"
  },
  "files": [
    "src/**/*",
    "assets/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "../",
      "to": ".",
      "filter": [
        "*.py",
        "requirements.txt",
        "sample_data/**/*"
      ]
    }
  ],
  "mac": {
    "category": "public.app-category.utilities",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "category": "Utility"
  }
}
